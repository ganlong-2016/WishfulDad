<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/toolbar_color"
    tools:context="com.drkj.wishfuldad.activity.DataActivity">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/toolbar_color"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imageView_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="6dp"
            android:src="@drawable/ic_back_white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp" >

            <TextView
                android:id="@+id/urine_record_text"
                android:layout_width="72dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="尿点记录"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/urine_forecast_text"
                android:layout_width="72dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/urine_record_text"
                android:gravity="center"
                android:text="尿点预测"
                android:textColor="#f9c9d8"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/diapers_number_text"
                android:layout_width="72dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/urine_forecast_text"
                android:gravity="center"
                android:text="尿片量"
                android:textColor="#f9c9d8"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/kickquilt_num_text"
                android:layout_width="72dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/diapers_number_text"
                android:gravity="center"
                android:text="踢被统计"
                android:textColor="#f9c9d8"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </RelativeLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPage_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>
