<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/toolbar_color"
    android:orientation="vertical"
    tools:context="com.drkj.wishfuldad.activity.TestViewActivity">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/toolbar_color"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="修改宝贝信息"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/back_imageview"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_back_white" />

        <TextView
            android:id="@+id/save_textview"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
             >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:text="血型"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#3f3f3f" />

            <RelativeLayout
                android:id="@+id/sel_a_blood_layout"
                android:layout_width="56dp"
                android:layout_height="46dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/textView1"
                android:background="#fff" >
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:text="A"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/textview_border"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#f00" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sel_b_blood_layout"
                android:layout_width="56dp"
                android:layout_height="46dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/sel_a_blood_layout"
                android:background="#fff" >
                <TextView
                    android:id="@+id/textView2_b"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="B"

                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#f00" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sel_ab_blood_layout"
                android:layout_width="56dp"
                android:layout_height="46dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/sel_b_blood_layout"
                android:background="#fff" >
                <TextView
                    android:id="@+id/textView2_ab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="AB"

                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#f00" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sel_o_blood_layout"
                android:layout_width="56dp"
                android:layout_height="46dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/sel_ab_blood_layout"
                android:background="#fff" >
                <TextView
                    android:id="@+id/textView2_o"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="O"

                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#f00" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sel_male_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="100dp"
                android:text="男"
                android:textSize="20sp"
                android:textColor="#00f" />

            <TextView
                android:id="@+id/set_female_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="200dp"
                android:text="女"
                android:textSize="36sp"
                android:textColor="#f00" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sel_height"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="70dp"
                android:layout_marginTop="140dp"
                />
            <TextView
                android:id="@+id/text_kedu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="150dp"
                android:textSize="20sp"
                android:text="120cm"/>
            <ImageView
                android:id="@+id/flag_image_view"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginTop="141dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_girl_pic" />
            <com.drkj.wishfuldad.view.VerticalRuleView
                android:id="@+id/kedu"
                android:layout_width="60dp"
                android:layout_height="260dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_horizontal"
                app:longLine = "20dp"
                app:shortLine = "15dp"
                app:textSize = "14sp"
                app:drawLine = "5dp"/>
        </RelativeLayout>

        <com.drkj.wishfuldad.view.WeightChoiceView
            android:id="@+id/weightChoiceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            app:arcLineColor="@color/gray"
            app:arcLineColor2="@color/white"
            app:drawLineSpace="1"
            app:drawTextSpace="10"
            app:everyScaleValue="1"
            app:indicatorColor="#FF0000"
            app:scaleLineColor="#000000"
            app:scaleMin="20"
            app:scaleMax="201"
            app:scaleNum="120"
            app:scaleSpace="1"
            app:scaleTextColor="#000000"
            app:scaleUnit="Kg"
            app:selectTextColor="#111111"/>
    </LinearLayout>
</LinearLayout>
